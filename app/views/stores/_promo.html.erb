<% unless store.promo_page_url.blank? %>
  <div id="store-promo">
    <%= link_to(image_tag(store.promo_image.url), store.promo_page_url) unless store.promo_image.url.contains?("missing.png") %>
  </div>
  <br class="clearfloatleft"/>
  <p style="text-align: center"><%= store.promo_text %></p>
<% end %>